---
const personalImageAlt = "Carlos Daniel Cortez (kael)";
import Badge from "@/components/Badge.astro";
import CopyableElements from "@/components/CopyableElements.astro";

const currentDate = new Date();
const startYear = 2014;
const yearsPassed = currentDate.getFullYear() - startYear;
---

<div class="max-w-xl">
  <div class="flex gap-4 mb-4">
    <img
      class="rounded-full shadow-lg size-16"
      src="/kaelwebdev.webp"
      alt={personalImageAlt}
    />
    <a
      href="https://linkedin.com/in/kaelwebdev"
      target="_blank"
      rel="noopener noreferrer"
      class="flex items-center transition md:justify-center md:hover:scale-105"
    >
      <Badge>Disponible para trabajar</Badge>
    </a>
  </div>
  <h1
    class="text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white"
  >
    Hey, soy Carlos Daniel Cortez
  </h1>
  <p
    id="contacto"
    class="mt-6 text-xl text-gray-800 dark:[&>strong]:text-yellow-400 [&>strong]:text-sky-500 [&>strong]:font-semibold dark:text-gray-300"
  >
    {yearsPassed} a√±os de experiencia. <strong>Multimedia Engineer</strong>, <strong
      >Software Developer</strong
    > de Cali, Colombia. Especializado en el <strong
      >desarrollo de aplicaciones web</strong
    >.
  </p>
  
  <CopyableElements />
  <button onclick="print()" class="inline-flex items-center justify-center gap-2 px-4 py-1 text-gray-800 transition bg-gray-100 border border-gray-300 rounded-full dark:bg-gray-800 dark:border-gray-600  hover:dark:border-white dark:text-white focus-visible:ring-yellow-500/80 text-md hover:bg-gray-900 hover:border-gray-700 group max-w-fit hover:text-white focus:outline-none focus-visible:outline-none focus-visible:ring focus-visible:ring-white focus-visible:ring-offset-2 active:bg-black print:hidden">
    Download PDF
  </button>

</div>
